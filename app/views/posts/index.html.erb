<h1>Posts</h1>

<ul>
  <% @post.each do |post| %>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.body.truncate(150) %></p>
      <% if current_user %>
        <p>Author: <%= post.user.email %></p>
      <% end %>
    </li>
  <% end %>

  <% if user_signed_in? %>
    <%= link_to 'Sign Out', sign_out_path_url, method: :delete %><p></p>
    <%= link_to 'New Post', new_post_url %>
  <% else %>
    <%= link_to 'Sign in', sign_in_path_url %>
  <% end %>
</ul>
